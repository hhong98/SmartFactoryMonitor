<Window
    x:Class="SmartFactoryMonitor.Report.ReportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartFactoryMonitor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="보고서 미리보기"
    Width="600"
    Height="840"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Click="BtnPrintClick" Content="출력" />
            <Button Click="BtnSavePdf_Click" Content="PDF 저장" />
        </StackPanel>

        <FlowDocumentReader
            x:Name="docReader"
            Grid.Row="1"
            ViewingMode="Scroll" />
    </Grid>
</Window>