<Page x:Class="SmartFactoryMonitor.Views.EquipListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartFactoryMonitor.Views"
      xmlns:custom="clr-namespace:SmartFactoryMonitor"
      DataContext="{StaticResource MainVM}"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="EquipListPage">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <!--화면을 가로로 두 영역으로 나누기 (0, 1)-->
            <RowDefinition Height="Auto"/>
            <!--내용물만큼 차지 (Grid.Row="0")-->
            <RowDefinition Height="*"/>
            <!--나머지 전체 차지(Grid.Row="1")-->
        </Grid.RowDefinitions>

        <!--표 컨트롤-->
        <!--ViewModel의 Equipments와 바인딩, 직접 정의한 열만 표시-->
        <Grid Grid.Row="0" Margin="10,5">
            <TextBlock Text="설비 마스터 목록" FontSize="20" FontWeight="Bold" 
                       VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="추가" Click ="BtnAdd_Click" 
                        Margin="0 0 5 0"
                        Background="LightBlue" Cursor="Hand"/>
                <Button Content="선택 삭제" Click="BtnDelete_Click" 
                    Padding="15,5"
                    Background="#FFF0F0" Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <custom:EquipList Grid.Row="1"/>
    </Grid>
</Page>
