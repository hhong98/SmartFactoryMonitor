<Page x:Class="SmartFactoryMonitor.Views.EquipListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:root="clr-namespace:SmartFactoryMonitor"
      xmlns:custom="clr-namespace:SmartFactoryMonitor.Controls"
      DataContext="{StaticResource MainVM}"
      mc:Ignorable="d"
      d:DesignWidth="800" d:DesignHeight="650"
      Title="EquipListPage">
    <Grid Background="{StaticResource MainBackgroundBrush}" Margin="20,5,20,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region Content Header-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="설비 관리" FontSize="20" FontWeight="Bold"
                    VerticalAlignment="Center" HorizontalAlignment="Left" />
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Width" Value="100" />
                        <Setter Property="Cursor" Value="Hand" />
                    </Style>
                </StackPanel.Resources>
                <Button Content="추가 " Click ="BtnAdd_Click"
                    Background="LightBlue" />
                <Button Content="선택 삭제" Click="BtnDelete_Click"
                        Margin="5,0"
                        Background="#FFF0F0" />
                <Button Content="내보내기" />
            </StackPanel>
        </Grid>
        <!--#endregion Content Header-->

        <!--#region Content Body-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=PanelToggle, Path=IsOpened}" Value="True">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!--#region Content Filter-->
            <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1">
                <StackPanel Background="White" Orientation="Horizontal">
                    <custom:SearchBox x:Name="SearchBox" Margin="12,0,0,0" />

                    <!--#region Filter Toggle-->
                    <ToggleButton x:Name="FilterToggle" Content="전체 ▼" Margin="5,0">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Width" Value="70" />
                                <Setter Property="Height" Value="30" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="{StaticResource MainBackgroundBrush}"
                                                    BorderBrush="#C7CCD1"
                                                    BorderThickness="1"
                                                    CornerRadius="5">
                                                <ContentPresenter
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    <!--#endregion Filter Toggle-->

                    <!--#region Panel Toggle -->
                    <Border BorderBrush="#C7CCD1" BorderThickness="1" Height="30" CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="Margin" Value="10, 0" />
                                    <Setter Property="FontSize" Value="13" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="목록" />
                            <custom:EquipListPanelToggle x:Name="PanelToggle" MouseLeftButtonUp="PanelToggle_Click" />
                            <TextBlock Text="상세" />
                        </StackPanel>
                    </Border>
                    <!--#endregion Panel Toggle-->

                    <!--#region Filter Popup-->
                    <Popup PlacementTarget="{Binding ElementName=FilterToggle}" Placement="Bottom"
                            IsOpen="{Binding IsChecked, ElementName=FilterToggle}" StaysOpen="True"
                            AllowsTransparency="True" PopupAnimation="None"
                            Width="100">
                        <Border Background="White"
                            BorderBrush="#C7CCD1" BorderThickness="1"
                            CornerRadius="6" Padding="10">
                            <StackPanel>
                                <Button x:Name="BtnFilterStable" Content="정상" BorderThickness="0" />
                                <Button x:Name="BtnFilterWarn" Content="주의" BorderThickness="0" />
                                <Button x:Name="BtnFilterError" Content="위험" BorderThickness="0" />
                                <Button x:Name="BtnFilterNoData" Content="오류" BorderThickness="0" />
                            </StackPanel>
                        </Border>
                    </Popup>
                    <!--#endregion Filter Popup-->
                </StackPanel>
            </Border>

            <!-- Content List -->
            <DataGrid x:Name="EquipList" Grid.Row="1" BorderThickness="0">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="Padding" Value="10,0" />
                        <Setter Property="Height" Value="40" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="설비명" Width="*" />
                    <DataGridTextColumn Header="IP 주소" Width="200" />
                    <DataGridTextColumn Header="포트" Width="100" />
                    <DataGridTextColumn Header="사용 유무" Width="100" />
                    <DataGridTextColumn Header="선택" Width="50" />
                </DataGrid.Columns>
            </DataGrid>
            <!--#endregion Content Filter-->
        </Grid>
        <!--#endregion Content Body-->
    </Grid>
</Page>