<Page
    x:Class="SmartFactoryMonitor.Views.EquipListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:SmartFactoryMonitor.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:SmartFactoryMonitor"
    Title="EquipListPage"
    d:DesignHeight="600"
    d:DesignWidth="975"
    DataContext="{StaticResource MainVM}"
    mc:Ignorable="d">

    <StackPanel Background="{StaticResource MainBackgroundBrush}" Orientation="Horizontal">
        <!--#region Main Body-->
        <Grid Margin="20,5,20,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--#region Content Header-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="설비 관리" />
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="30" />
                            <Setter Property="Width" Value="100" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                    </StackPanel.Resources>
                    <Button
                        Background="{StaticResource StatusStableBrush}"
                        Click="BtnAdd_Click"
                        Content="추가 "
                        Foreground="{StaticResource StatusStableTintBrush}" />
                    <Button
                        Margin="5,0"
                        Background="{StaticResource StatusNoDataBrush}"
                        Content="내보내기"
                        Foreground="{StaticResource StatusNoDataTintBrush}" />
                    <Button
                        Width="100"
                        Height="30"
                        Background="{StaticResource StatusErrorBrush}"
                        Click="BtnDelete_Click"
                        Content="선택 삭제"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Foreground="{StaticResource StatusErrorTintBrush}"
                        Style="{StaticResource HideWhenPanelOpened}" />
                </StackPanel>
            </Grid>
            <!--#endregion Content Header-->

            <!--#region Content Body-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <!--  리스트 필터  -->
                    <RowDefinition Height="50" />
                    <!--  리스트  -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--#region Content Filter-->
                <Border
                    Grid.Row="0"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                    <StackPanel Background="White" Orientation="Horizontal">
                        <custom:SearchBox
                            x:Name="EquipSearchBox"
                            Margin="12,0,0,0"
                            SearchText="{Binding EquipManageVM.SearchTxt}" />

                        <!--#region Filter Toggle-->
                        <ToggleButton
                            x:Name="FilterToggle"
                            Margin="5,0"
                            Content="전체 ▼"
                            Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Width" Value="70" />
                                    <Setter Property="Height" Value="30" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border
                                                    Background="{StaticResource MainBackgroundBrush}"
                                                    BorderBrush="#C7CCD1"
                                                    BorderThickness="1"
                                                    CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <!--#endregion Filter Toggle-->

                        <!--#region Panel Toggle-->
                        <Border
                            Height="30"
                            BorderBrush="#C7CCD1"
                            BorderThickness="1"
                            CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="Margin" Value="10,0" />
                                        <Setter Property="FontSize" Value="13" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </Style>
                                </StackPanel.Resources>
                                <TextBlock Text="목록" />
                                <custom:ToggleButton
                                    x:Name="PanelToggle"
                                    CloseBackground="{StaticResource PanelToggleBackgroundBrush}"
                                    Cursor="Hand"
                                    IsOpened="{Binding IsPanelOpened, Mode=TwoWay}"
                                    OpenBackground="{StaticResource PanelToggleOpenBackgroundBrush}" />
                                <TextBlock Text="상세" />
                            </StackPanel>
                        </Border>
                        <!--#endregion Panel Toggle-->

                        <!--#region Filter Popup-->
                        <Popup
                            Width="100"
                            AllowsTransparency="True"
                            IsOpen="{Binding IsChecked, ElementName=FilterToggle}"
                            Placement="Bottom"
                            PlacementTarget="{Binding ElementName=FilterToggle}"
                            PopupAnimation="None"
                            StaysOpen="True">
                            <Border
                                Padding="8"
                                Background="White"
                                BorderBrush="#C7CCD1"
                                BorderThickness="1"
                                CornerRadius="6">
                                <StackPanel>
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="{StaticResource MainBackgroundBrush}" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="FontSize" Value="13" />
                                            <Setter Property="FontWeight" Value="Medium" />
                                        </Style>
                                    </StackPanel.Resources>

                                    <Button x:Name="BtnFilterStable" Content="정상" />
                                    <Button x:Name="BtnFilterWarn" Content="주의" />
                                    <Button x:Name="BtnFilterError" Content="위험" />
                                    <Button x:Name="BtnFilterNoData" Content="오류" />
                                </StackPanel>
                            </Border>
                        </Popup>
                        <!--#endregion Filter Popup-->
                    </StackPanel>
                </Border>
                <!--#endregion Content Filter-->

                <!--#region Content List-->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <!--  리스트 헤더  -->
                        <RowDefinition Height="40" />
                        <!--  리스트 바디  -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  region List Header  -->
                    <Border
                        Grid.Row="0"
                        BorderBrush="LightGray"
                        BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3" />
                                <ColumnDefinition Width="210" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition>
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="80" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPanelOpened}" Value="True">
                                                    <Setter Property="Width" Value="0" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="15" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </Grid.Resources>

                            <TextBlock
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Text="설비명" />
                            <TextBlock Grid.Column="2" Text="IP 주소" />
                            <TextBlock
                                Grid.Column="3"
                                HorizontalAlignment="Center"
                                Text="포트" />
                            <TextBlock
                                Grid.Column="4"
                                HorizontalAlignment="Center"
                                Text="사용 유무" />
                            <TextBlock
                                Grid.Column="5"
                                HorizontalAlignment="Center"
                                Text="선택" />
                        </Grid>
                    </Border>
                    <!--#endregion List Header-->

                    <!--  region List Body  -->
                    <ListView
                        x:Name="EquipListContent"
                        Grid.Row="1"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        ItemsSource="{Binding EquipManageVM.FilteredEquipments}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectedItem="{Binding EquipManageVM.SelectedEquip}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <custom:EquipListItem />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <!--#endregion List Body-->
                </Grid>
                <!--#endregion Content List-->
            </Grid>
            <!--#endregion Content Body-->
        </Grid>
        <!--#endregion Main Body-->

        <!--#region Side Panel-->
        <custom:EquipFormPanel x:Name="EquipPanel" />
        <!--#endregion Side Panel-->
    </StackPanel>
</Page>