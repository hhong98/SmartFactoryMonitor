<Page x:Class="SmartFactoryMonitor.Views.EquipListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SmartFactoryMonitor.Views"
      xmlns:custom="clr-namespace:SmartFactoryMonitor.Controls"
      DataContext="{StaticResource MainVM}"
      mc:Ignorable="d"
      d:DesignWidth="800" d:DesignHeight="650"
      Title="EquipListPage">
    <Grid Background="{StaticResource MainBackgroundBrush}" Margin="20,5,20,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region Content Header-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="설비 관리" FontSize="20" FontWeight="Bold"
                    VerticalAlignment="Center" HorizontalAlignment="Left" />
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Width" Value="100" />
                        <Setter Property="Cursor" Value="Hand" />
                    </Style>
                </StackPanel.Resources>
                <Button Content="추가 " Click ="BtnAdd_Click"
                    Background="LightBlue" />
                <Button Content="선택 삭제" Click="BtnDelete_Click"
                        Margin="5,0"
                        Background="#FFF0F0" />
                <Button Content="내보내기" />
            </StackPanel>
        </Grid>
        <!--#endregion Content Header-->

        <!--#region Content Body-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=PanelToggle, Path=IsOpened}" Value="True">

                            <Setter Property="HorizontalAlignment" Value="Left" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!--#region Content Filter-->
            <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1">
                <StackPanel Background="White" Orientation="Horizontal">
                    <TextBox x:Name="SearchBox" Margin="12,0,0,0" FontSize="18">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Height" Value="30" />
                                <Setter Property="Width" Value="250" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=PanelToggle, Path=IsOpened}"
                                                Value="False">
                                        <Setter Property="Width" Value="300" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!--#region Filter Toggle-->
                    <ToggleButton x:Name="FilterToggle" Content="전체 ▼" Background="{StaticResource MainBackgroundBrush}" Margin="5,0">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Width" Value="70" />
                                <Setter Property="Height" Value="30" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=PanelToggle, Path=IsOpened}"
                                                Value="False">
                                        <Setter Property="Width" Value="100" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    <Popup PlacementTarget="{Binding ElementName=FilterToggle}"
                        Placement="Bottom"
                        Width="100"
                        IsOpen="{Binding IsChecked, ElementName=FilterToggle}"
                        StaysOpen="True"
                        AllowsTransparency="True"
                        PopupAnimation="None">
                        <Border Background="White"
                            BorderBrush="#C7CCD1"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10">
                            <StackPanel>
                                <Button x:Name="BtnFilterStable" Content="정상" BorderThickness="0" />
                                <Button x:Name="BtnFilterWarn" Content="주의" BorderThickness="0" />
                                <Button x:Name="BtnFilterError" Content="위험" BorderThickness="0" />
                                <Button x:Name="BtnFilterNoData" Content="오류" BorderThickness="0" />
                            </StackPanel>
                        </Border>
                    </Popup>
                    <!--#endregion Filter Toggle-->

                    <!--#region Panel Toggle -->
                    <Border BorderBrush="#C7CCD1" BorderThickness="1" Height="30">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="Margin" Value="10, 0" />
                                    <Setter Property="FontSize" Value="13" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="목록" />
                            <custom:EquipListPanelToggle x:Name="PanelToggle" MouseLeftButtonUp="PanelToggle_Click" />
                            <TextBlock Text="상세" />
                        </StackPanel>
                    </Border>
                    <!--#endregion Panel Toggle-->
                </StackPanel>
            </Border>

            <!-- Content List -->
            <custom:EquipTable Grid.Row="1" x:Name="ContentList" Height="450" />
            <!--#endregion Content Filter-->
        </Grid>
        <!--#endregion Content Body-->
    </Grid>
</Page>