<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  =========================  -->
    <!--  레이아웃  -->
    <!--  =========================  -->
    <Color x:Key="PrimaryBlue">#1677C8</Color>
    <Color x:Key="PrimaryBlueDark">#125FA3</Color>

    <Color x:Key="SidebarBackground">#1F3A5A</Color>
    <Color x:Key="SidebarHover">#274B73</Color>

    <Color x:Key="MainBackground">#F5F7FA</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="BorderColor">#E5E9F0</Color>

    <!--  =========================  -->
    <!--  텍스트  -->
    <!--  =========================  -->
    <Color x:Key="TextPrimary">#263238</Color>
    <Color x:Key="TextSecondary">#607D8B</Color>
    <Color x:Key="TextDisabled">#B0BEC5</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>

    <!--  =========================  -->
    <!--  상태  -->
    <!--  =========================  -->
    <!--  STABLE  -->
    <Color x:Key="StatusStable">#5cb85c</Color>
    <Color x:Key="StatusStableTint">#E6F4EA</Color>

    <!--  WARN  -->
    <Color x:Key="StatusWarn">#f0ad4e</Color>
    <Color x:Key="StatusWarnTint">#FFF4E5</Color>

    <!--  ERROR  -->
    <Color x:Key="StatusError">#d9534f</Color>
    <Color x:Key="StatusErrorTint">#FDECEA</Color>

    <!--  NO DATA  -->
    <Color x:Key="StatusNoData">#546E7A</Color>
    <Color x:Key="StatusNoDataTint">#ECEFF1</Color>

    <!--  =========================  -->
    <!--  온도  -->
    <!--  =========================  -->
    <Color x:Key="TempNormalText">#37474F</Color>
    <Color x:Key="TempHighText">#D32F2F</Color>
    <Color x:Key="TempUnitText">#90A4AE</Color>

    <!--  =========================  -->
    <!--  버튼  -->
    <!--  =========================  -->
    <Color x:Key="ButtonPrimary">#1677C8</Color>
    <Color x:Key="ButtonPrimaryHover">#1E88E5</Color>

    <Color x:Key="ButtonSuccess">#2E7D32</Color>
    <Color x:Key="ButtonDanger">#D32F2F</Color>

    <Color x:Key="ButtonDisabled">#B0BEC5</Color>

    <!--  =========================  -->
    <!--  Brushes  -->
    <!--  =========================  -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}" />
    <SolidColorBrush x:Key="PrimaryBlueDarkBrush" Color="{StaticResource PrimaryBlueDark}" />

    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackground}" />
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHover}" />

    <SolidColorBrush x:Key="MainBackgroundBrush" Color="{StaticResource MainBackground}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}" />
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimary}" />

    <!--  상태 Brushes  -->
    <SolidColorBrush x:Key="StatusStableBrush" Color="{StaticResource StatusStable}" />
    <SolidColorBrush x:Key="StatusStableTintBrush" Color="{StaticResource StatusStableTint}" />

    <SolidColorBrush x:Key="StatusWarnBrush" Color="{StaticResource StatusWarn}" />
    <SolidColorBrush x:Key="StatusWarnTintBrush" Color="{StaticResource StatusWarnTint}" />

    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusError}" />
    <SolidColorBrush x:Key="StatusErrorTintBrush" Color="{StaticResource StatusErrorTint}" />

    <SolidColorBrush x:Key="StatusNoDataBrush" Color="{StaticResource StatusNoData}" />
    <SolidColorBrush x:Key="StatusNoDataTintBrush" Color="{StaticResource StatusNoDataTint}" />

    <!--  온도 Brushes  -->
    <SolidColorBrush x:Key="TempNormalTextBrush" Color="{StaticResource TempNormalText}" />
    <SolidColorBrush x:Key="TempHighTextBrush" Color="{StaticResource TempHighText}" />
    <SolidColorBrush x:Key="TempUnitTextBrush" Color="{StaticResource TempUnitText}" />

    <!--  이외의 요소  -->
    <SolidColorBrush x:Key="PanelToggleBackgroundBrush" Color="#5f6f97" />
    <SolidColorBrush x:Key="PanelToggleOpenBackgroundBrush" Color="#aebdd0" />
</ResourceDictionary>