<Window
    x:Class="SmartFactoryMonitor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartFactoryMonitor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tool="http://schemas.xceed.com/wpf/xaml/toolkit"
    x:Name="MainWin"
    Width="900"
    Height="700"
    Background="#F5F5F5"
    DataContext="{StaticResource MainVM}"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen">

    <Grid x:Name="Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--#region Sidebar-->
        <Grid Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                BorderBrush="{StaticResource SidebarHoverBrush}"
                BorderThickness="0,0,0,1">
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{StaticResource TextOnPrimaryBrush}"
                    Text="🏭 SMART FACTORY MANAGER"
                    TextAlignment="Center" />
            </Border>
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource SidebarBackgroundBrush}" />
                        <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}" />
                        <Setter Property="Padding" Value="15,10" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter
                                            Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            RecognizesAccessKey="True" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource SidebarHoverBrush}" />
                                            <Setter Property="FontSize" Value="14" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBlueDarkBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <!--#region Navigation-->
                <StackPanel
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
                    <Button
                        x:Name="BtnMonitor"
                        Click="BtnMonitor_Click"
                        Content="🖥  설비 모니터링" />
                    <Button
                        x:Name="BtnShowList"
                        Click="BtnShowList_Click"
                        Content="🔧  설비 관리" />
                </StackPanel>
                <!--#endregion Navigation-->
                <!--#region System-->
                <Border
                    Grid.Row="1"
                    BorderBrush="{StaticResource SidebarHoverBrush}"
                    BorderThickness="0,1,0,0">
                    <StackPanel
                        Margin="0,10,0,0"
                        VerticalAlignment="Top"
                        Orientation="Vertical">
                        <Button Content="⚙️  설정" />
                    </StackPanel>
                </Border>
                <!--#endregion System-->
            </Grid>
        </Grid>
        <!--#endregion Sidebar-->

        <!--#region Content-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="#007ACC">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}" />
                        </Style>
                    </Grid.Resources>

                    <!--#region Content Header-->
                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="SMART FACTORY MANAGER" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            Foreground="Yellow"
                            Text="●" />
                        <TextBlock Text="Online" />
                    </StackPanel>
                    <!--#endregion Content Header-->
                </Grid>
            </Border>

            <!--  Content Body  -->
            <Frame
                x:Name="MainFrame"
                Grid.Row="1"
                NavigationUIVisibility="Hidden" />
        </Grid>
        <!--#endregion Content-->
    </Grid>
</Window>