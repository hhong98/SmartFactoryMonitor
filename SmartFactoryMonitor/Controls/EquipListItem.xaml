<UserControl x:Class="SmartFactoryMonitor.Controls.EquipListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" Background="White">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="Padding" Value="5" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
        </StackPanel.Resources>
        <Border x:Name="BdStatus" Width="3">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource StatusNoDataBackgroundBrush}" />
                </Style>
            </Border.Style>
        </Border>

        <TextBlock x:Name="EquipName" Text="{Binding EquipName}" Width="200" />
        <TextBlock x:Name="EquipIpAddr" Text="{Binding IpAddress}" Width="150" />
        <TextBlock x:Name="EquipPort" Text="{Binding Port}" Width="100" />
        <TextBlock x:Name="IsActive" Text="{Binding IsActive}"Width="100" />
        <CheckBox x:Name="IsSelected" Text="{Binding IsChecked}"Width="50" />
    </StackPanel>
</UserControl>