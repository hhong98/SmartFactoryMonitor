<UserControl x:Class="SmartFactoryMonitor.Controls.EquipListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
             mc:Ignorable="d">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="210" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Width" Value="80" />
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding DataContext.IsPanelOpened, RelativeSource={RelativeSource AncestorType=ListView}}"
                                Value="True">
                                <Setter Property="Width" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Padding" Value="0,10" />
            </Style>
        </Grid.Resources>

        <Border x:Name="EquipStatus" Grid.Column="0"
                Background="{StaticResource StatusNoDataBackgroundBrush}" />
        <TextBlock Grid.Column="1" Text="{Binding EquipName}"
                   HorizontalAlignment="Left"
                   Margin="10,0,0,0" />
        <TextBlock Grid.Column="2" Text="{Binding IpAddress}"
                   HorizontalAlignment="Left" />
        <TextBlock Grid.Column="3" Text="{Binding Port}"
                   HorizontalAlignment="Center" />
        <TextBlock Grid.Column="4"
                   Text="{Binding IsActive}"
                   HorizontalAlignment="Center" />
        <CheckBox Grid.Column="5" IsChecked="{Binding IsChecked}"
                  HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>