<UserControl x:Class="SmartFactoryMonitor.Controls.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
             mc:Ignorable="d"
             MinWidth= "30" MaxHeight="30">
    <Border x:Name="ToggleSwitch" Background="Transparent" Padding="2">
        <!-- Toggle Background -->
        <Border x:Name="Switch" Width="46" Height="20" CornerRadius="10" BorderThickness="1" BorderBrush="Gray">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource PanelToggleOpenBackgroundBrush}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsOpened, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Background" Value="{StaticResource PanelToggleBackgroundBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <!-- Toggle Thumb -->
                <Border x:Name="Thumb" Width="17" Height="17" Background="White" CornerRadius="12" VerticalAlignment="Center" Margin="5,0,5,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOpened, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </Grid>
        </Border>
    </Border>
</UserControl>