<UserControl x:Class="SmartFactoryMonitor.Controls.EquipFormPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
             xmlns:common="clr-namespace:SmartFactoryMonitor.Common"
             DataContext="{StaticResource MainVM}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <common:ActiveConverter x:Key="ActiveConverter" />
    </UserControl.Resources>
    <Border BorderThickness="1" BorderBrush="LightGray"
                Width="270" Height="500" Margin="5,0"
                Style="{StaticResource ShowWhenPanelOpened}">
        <!--#region Panel Form-->
        <StackPanel x:Name="EquipSidePanel" Background="White">
            <StackPanel.Resources>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=PanelToggle, Path=IsOpened}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="Label">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="8,0,0,0" />
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="28" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="15" />
                    <Setter Property="Margin" Value="12,2" />
                </Style>
            </StackPanel.Resources>

            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="0,0,0,10">
                <TextBlock x:Name="FormHeader" Padding="15"
                               Text="{Binding EquipManageVM.EditingEquip.EquipName, FallbackValue='설비를 선택하세요'}"
                               FontSize="18" FontWeight="Bold" />
            </Border>

            <Label Content="설비명" />
            <TextBox x:Name="FormName"
                         Text="{Binding EquipManageVM.EditingEquip.EquipName, FallbackValue=''}" />

            <Label Content="IP 주소" />
            <TextBox x:Name="FormIpAddr"
                         Text="{Binding EquipManageVM.EditingEquip.IpAddress, FallbackValue=''}" />

            <Label Content="포트" />
            <TextBox x:Name="FormPort"
                         Text="{Binding EquipManageVM.EditingEquip.Port, FallbackValue=''}" />

            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="최저 온도" Margin="27,0,0,0" />
                <TextBox Grid.Row="1" Grid.Column="0" x:Name="FormMinTemp"
                             Width="70" HorizontalContentAlignment="Center"
                             Text="{Binding EquipManageVM.EditingEquip.MinTemp, FallbackValue=''}" />

                <TextBlock Grid.Row="1" Grid.Column="1" Text="~" Margin="10,0"  VerticalAlignment="Center"
                               FontSize="15" FontWeight="Bold" />

                <Label Grid.Row="0" Grid.Column="2" Content="최고 온도" Margin="27,0,0,0" />
                <TextBox Grid.Row="1" Grid.Column="2" x:Name="FormMaxTemp"
                             Width="70" HorizontalContentAlignment="Center"
                             Text="{Binding EquipManageVM.EditingEquip.MaxTemp, FallbackValue=''}" />
            </Grid>

            <Label Content="등록일" />
            <TextBlock x:Name="FormCreated"
                           FontSize="18" FontWeight="Bold" Foreground="Gray" Margin="10,0"
                           Text="{Binding EquipManageVM.EditingEquip.CreateDate, FallbackValue=''}" />

            <Grid Margin="0,20">
                <Label Content="사용 유무" FontSize="15" />
                <local:ToggleButton x:Name="FormIsActive"
                     IsOpened="{Binding EquipManageVM.EditingEquip.IsActive,
                                        Converter={StaticResource ActiveConverter},
                                        Mode=TwoWay}"
                     OpenBackground="{StaticResource StatusStableBackgroundBrush}"
                     CloseBackground="{StaticResource StatusErrorBackgroundBrush}" />
            </Grid>
            <!--#endregion Panel Form-->

            <!--#region Panel Button-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="70" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>

                <Button x:Name="BtnPanelSave" Content="저장" Foreground="{StaticResource StatusStableTextBrush}" Background="{StaticResource StatusStableBackgroundBrush}"
                            Click="BtnPanelSave_Click" />
                <Button x:Name="BtnPanelCancel" Content="취소" Click="BtnPanelCancel_Click" />
                <Button x:Name="BtnPanelDelete" Content="삭제" Foreground="{StaticResource StatusErrorTextBrush}" Background="{StaticResource StatusErrorBackgroundBrush}"
                            Click="BtnPanelDelete_Click" />
            </StackPanel>
            <!--#endregion Panel Button-->
        </StackPanel>
    </Border>
</UserControl>