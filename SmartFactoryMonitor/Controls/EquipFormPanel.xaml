<UserControl
    x:Class="SmartFactoryMonitor.Controls.EquipFormPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:SmartFactoryMonitor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{StaticResource MainVM}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <common:ActiveConverter x:Key="ActiveConverter" />

        <Style x:Key="ActiveToggleStyle" TargetType="{x:Type local:ToggleButton}">
            <Setter Property="OpenBackground" Value="{StaticResource StatusStableBackgroundBrush}" />
            <Setter Property="CloseBackground" Value="{StaticResource StatusErrorBackgroundBrush}" />
            <Setter Property="Cursor" Value="Hand" />

            <Style.Triggers>
                <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                    <Setter Property="IsEnabled" Value="False" />
                    <Setter Property="CloseBackground" Value="LightGray" />
                    <Setter Property="OpenBackground" Value="LightGray" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border
        Width="270"
        Height="550"
        Margin="5,0"
        BorderBrush="LightGray"
        BorderThickness="1">
        <!--#region Panel Form-->
        <StackPanel x:Name="EquipSidePanel" Background="White">
            <StackPanel.Resources>

                <Style TargetType="Label">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Margin" Value="8,0,0,0" />
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="28" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="15" />
                    <Setter Property="Margin" Value="12,2" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Background" Value="LightGray" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Resources>

            <Border
                Margin="0,0,0,10"
                BorderBrush="LightGray"
                BorderThickness="0,0,0,1">
                <TextBlock
                    x:Name="FormHeader"
                    Padding="15"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding EquipManageVM.FormHeaderTxt, FallbackValue=''}" />
            </Border>

            <Label Content="설비명" />
            <TextBox x:Name="FormName" Text="{Binding EquipManageVM.EditingEquip.EquipName, FallbackValue=''}" />

            <Label Content="IP 주소" />
            <TextBox x:Name="FormIpAddr" Text="{Binding EquipManageVM.EditingEquip.IpAddress, FallbackValue=''}" />

            <Label Content="포트" />
            <TextBox x:Name="FormPort" Text="{Binding EquipManageVM.EditingEquip.Port, FallbackValue=''}" />

            <Label Content="설치 위치" />
            <TextBox x:Name="FormLocation" Text="{Binding EquipManageVM.EditingEquip.Location, FallbackValue=''}" />

            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="27,0,0,0"
                    Content="최저 온도" />
                <TextBox
                    x:Name="FormMinTemp"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="70"
                    HorizontalContentAlignment="Center"
                    Text="{Binding EquipManageVM.EditingEquip.MinTemp, FallbackValue=''}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="Bold"
                    Text="~" />

                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="27,0,0,0"
                    Content="최고 온도" />
                <TextBox
                    x:Name="FormMaxTemp"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="70"
                    HorizontalContentAlignment="Center"
                    Text="{Binding EquipManageVM.EditingEquip.MaxTemp, FallbackValue=''}" />
            </Grid>

            <Label Content="등록일" />
            <TextBlock
                x:Name="FormCreated"
                Margin="14,0"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Gray"
                Text="{Binding EquipManageVM.EditingEquip.CreateDate, FallbackValue=''}" />

            <Grid Margin="0,20">
                <Label Content="사용 유무" FontSize="15" />
                <local:ToggleButton
                    x:Name="FormIsActive"
                    IsOpened="{Binding EquipManageVM.EditingEquip.IsActive, Converter={StaticResource ActiveConverter}, Mode=TwoWay}"
                    Style="{StaticResource ActiveToggleStyle}" />
            </Grid>
            <!--#endregion Panel Form-->

            <!--#region Panel Button-->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="70" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>

                <Button
                    x:Name="BtnPanelSave"
                    Background="{StaticResource StatusStableBackgroundBrush}"
                    Click="BtnPanelSave_Click"
                    Content="저장"
                    Foreground="{StaticResource StatusStableTextBrush}" />
                <Button
                    x:Name="BtnPanelCancel"
                    Click="BtnPanelCancel_Click"
                    Content="취소"
                    IsEnabled="True" />
                <Button
                    x:Name="BtnPanelDelete"
                    Background="{StaticResource StatusErrorBackgroundBrush}"
                    Click="BtnPanelDelete_Click"
                    Content="삭제"
                    Foreground="{StaticResource StatusErrorTextBrush}" />
            </StackPanel>
            <!--#endregion Panel Button-->
        </StackPanel>
    </Border>
</UserControl>