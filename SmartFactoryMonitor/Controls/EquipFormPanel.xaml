<UserControl
    x:Class="SmartFactoryMonitor.Controls.EquipFormPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:SmartFactoryMonitor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{StaticResource MainVM}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <common:ActiveConverter x:Key="ActiveConverter" />

        <CollectionViewSource x:Key="GroupedLocations" Source="{x:Static common:AppConstants.Locations}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <Style x:Key="ActiveToggleStyle" TargetType="{x:Type local:ToggleButton}">
            <Setter Property="OpenBackground" Value="{StaticResource StatusStableBrush}" />
            <Setter Property="CloseBackground" Value="{StaticResource StatusErrorBrush}" />
            <Setter Property="Cursor" Value="Hand" />

            <Style.Triggers>
                <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                    <Setter Property="IsEnabled" Value="False" />
                    <Setter Property="CloseBackground" Value="LightGray" />
                    <Setter Property="OpenBackground" Value="LightGray" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border
        Width="270"
        Height="550"
        Margin="5,0"
        BorderBrush="LightGray"
        BorderThickness="1">
        <!--#region Panel Form-->
        <StackPanel x:Name="EquipSidePanel" Background="White">
            <StackPanel.Resources>

                <Style TargetType="Label">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Margin" Value="8,0,0,0" />
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="28" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="15" />
                    <Setter Property="BorderBrush" Value="{StaticResource TextSecondaryBrush}" />
                    <Setter Property="Margin" Value="12,2" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Background" Value="#FFF0F0F0" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="ComboBox">
                    <Setter Property="Width" Value="245" />
                    <Setter Property="Height" Value="28" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="15" />
                    <Setter Property="Margin" Value="0,2,0,0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                <Grid>
                                    <!--  드롭다운 버튼 (박스)  -->
                                    <ToggleButton
                                        x:Name="ComboToggle"
                                        HorizontalContentAlignment="Right"
                                        VerticalContentAlignment="Center"
                                        Background="White"
                                        BorderBrush="{StaticResource TextSecondaryBrush}"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">

                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    Opacity="1">
                                                    <ContentPresenter
                                                        Margin="0,0,5,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>

                                        <Image
                                            x:Name="ToggleArrow"
                                            Source="../res/drop_down_arrow.png"
                                            Stretch="Uniform" />
                                    </ToggleButton>

                                    <!--  선택된 아이템 표시 영역 (박스 내부)  -->
                                    <ContentPresenter
                                        x:Name="SelectedItem"
                                        Margin="4,0,0,0"
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                        IsHitTestVisible="False" />

                                    <!--  드롭다운 메뉴 (팝업 내부)  -->
                                    <Popup
                                        x:Name="ComboMenu"
                                        IsOpen="{TemplateBinding IsDropDownOpen}"
                                        Placement="Bottom"
                                        PopupAnimation="None">
                                        <Grid
                                            Width="{TemplateBinding ActualWidth}"
                                            MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                            Background="White">
                                            <Border BorderBrush="Black" BorderThickness="1">
                                                <ScrollViewer>
                                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                                </ScrollViewer>
                                            </Border>
                                        </Grid>
                                    </Popup>
                                </Grid>

                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Setter TargetName="ComboToggle" Property="Background" Value="#FFF0F0F0" />
                                        <Setter TargetName="ToggleArrow" Property="Opacity" Value="0.5" />
                                        <Setter TargetName="SelectedItem" Property="Opacity" Value="0.5" />
                                        <Setter TargetName="ComboToggle" Property="Opacity" Value="0.6" />
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <Border
                Margin="0,0,0,10"
                BorderBrush="LightGray"
                BorderThickness="0,0,0,1">
                <TextBlock
                    x:Name="FormHeader"
                    Padding="15"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding EquipManageVM.FormHeaderTxt, FallbackValue=''}" />
            </Border>

            <Label Content="설비명" />
            <TextBox x:Name="FormName" Text="{Binding EquipManageVM.EditingEquip.EquipName, FallbackValue=''}" />

            <Label Content="IP 주소" />
            <TextBox x:Name="FormIpAddr" Text="{Binding EquipManageVM.EditingEquip.IpAddress, FallbackValue=''}" />

            <Label Content="포트" />
            <TextBox x:Name="FormPort" Text="{Binding EquipManageVM.EditingEquip.Port, FallbackValue=''}" />

            <Label Content="설치 위치" />
            <ComboBox
                IsSynchronizedWithCurrentItem="False"
                ItemsSource="{Binding Source={StaticResource GroupedLocations}}"
                SelectedValue="{Binding EquipManageVM.EditingEquip.Location, Mode=TwoWay}"
                SelectedValuePath="FullName">
                <ComboBox.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="0,5,0,5"
                                    HorizontalAlignment="Left"
                                    Foreground="Gray"
                                    Text="{Binding Name, StringFormat=' ======= {0} ======='}" />
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ComboBox.GroupStyle>

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FullName}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="25,0,0,0"
                    Content="최저 온도" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal">
                    <TextBox
                        Width="80"
                        HorizontalContentAlignment="Center"
                        Text="{Binding EquipManageVM.EditingEquip.MinTemp}" />
                    <TextBlock
                        Margin="-10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="Black"
                        Text="°C" />
                </StackPanel>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="~" />

                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="25,0,0,0"
                    Content="최고 온도" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="2"
                    Orientation="Horizontal">
                    <TextBox
                        Width="80"
                        HorizontalContentAlignment="Center"
                        Text="{Binding EquipManageVM.EditingEquip.MaxTemp}" />
                    <TextBlock
                        Margin="-10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="Bold"
                        Text="°C" />
                </StackPanel>
            </Grid>

            <Label Content="등록일" />
            <TextBlock
                x:Name="FormCreated"
                Margin="14,0"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Gray"
                Text="{Binding EquipManageVM.EditingEquip.CreateDate, FallbackValue=''}" />

            <Grid Margin="0,20">
                <Label Content="사용 유무" FontSize="15" />
                <local:ToggleButton
                    x:Name="FormIsActive"
                    IsOpened="{Binding EquipManageVM.EditingEquip.IsActive, Converter={StaticResource ActiveConverter}, Mode=TwoWay}"
                    Style="{StaticResource ActiveToggleStyle}" />
            </Grid>
            <!--#endregion Panel Form-->

            <!--#region Panel Button-->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="70" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>

                <Button
                    x:Name="BtnPanelSave"
                    Background="{StaticResource StatusStableBrush}"
                    Click="BtnPanelSave_Click"
                    Content="저장"
                    Foreground="{StaticResource StatusStableTintBrush}" />
                <Button
                    x:Name="BtnPanelCancel"
                    Click="BtnPanelCancel_Click"
                    Content="취소"
                    IsEnabled="True" />
                <Button
                    x:Name="BtnPanelDelete"
                    Background="{StaticResource StatusErrorBrush}"
                    Click="BtnPanelDelete_Click"
                    Content="삭제"
                    Foreground="{StaticResource StatusErrorTintBrush}" />
            </StackPanel>
            <!--#endregion Panel Button-->
        </StackPanel>
    </Border>
</UserControl>