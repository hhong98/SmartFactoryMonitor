<UserControl
    x:Class="SmartFactoryMonitor.Controls.EquipMonitorPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:SmartFactoryMonitor.Properties"
    DataContext="{StaticResource MainVM}"
    mc:Ignorable="d">
    <Border
        Width="270"
        Height="550"
        Margin="5,0"
        BorderBrush="LightGray"
        BorderThickness="1">
        <!--#region Panel Form-->

        <StackPanel x:Name="EquipSidePanel" Background="White">
            <StackPanel.Resources>
                <!--#region Style-->
                <Style TargetType="Label">
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Margin" Value="8,0,0,0" />
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="28" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="15" />
                    <Setter Property="BorderBrush" Value="{StaticResource TextSecondaryBrush}" />
                    <Setter Property="Margin" Value="12,2" />
                    <Setter Property="IsEnabled" Value="False" />
                    <Setter Property="Background" Value="#FFF0F0F0" />
                </Style>
                <!--#endregion Style-->
            </StackPanel.Resources>

            <!--#region Equip Info-->
            <Border
                Margin="0,0,0,10"
                BorderBrush="LightGray"
                BorderThickness="0,0,0,1">
                <TextBlock
                    x:Name="FormHeader"
                    Padding="15"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding MonitorVM.FormHeaderTxt, FallbackValue=''}" />
            </Border>

            <Label Content="설비명" />
            <TextBox x:Name="FormName" Text="{Binding MonitorVM.SelectedMonitor.EquipName, FallbackValue=''}" />

            <Label Content="설치 위치" />
            <TextBox Text="{Binding MonitorVM.SelectedMonitor.Location, FallbackValue=''}" />

            <Label Content="현재 온도" />
            <TextBox x:Name="FormPort" Text="{Binding MonitorVM.SelectedMonitor.CurrentTemp, FallbackValue='', StringFormat={}{0:F1}°C}" />

            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="25,0,0,0"
                    Content="최저 온도" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Horizontal">
                    <TextBox
                        Width="80"
                        HorizontalContentAlignment="Center"
                        Text="{Binding MonitorVM.SelectedMonitor.MinTemp}" />
                    <TextBlock
                        Margin="-10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="Black"
                        Text="°C" />
                </StackPanel>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="~" />

                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="25,0,0,0"
                    Content="최고 온도" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="2"
                    Orientation="Horizontal">
                    <TextBox
                        Width="80"
                        HorizontalContentAlignment="Center"
                        Text="{Binding MonitorVM.SelectedMonitor.MinTemp}" />
                    <TextBlock
                        Margin="-10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="Black"
                        Text="°C" />
                </StackPanel>
            </Grid>
            <!--#endregion Equip Info-->

            <!--#region Monitor Info-->
            <StackPanel>
                <!--  Last Update Time  -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="마지막 수신" />
                    <TextBlock
                        x:Name="FormCreated"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="Gray"
                        Text="{Binding MonitorVM.SelectedMonitor.UpdateTimeTxt, FallbackValue=''}" />
                </Grid>

                <!--#region Operation-->

                <Border BorderBrush="LightGray" BorderThickness="0,1,0,0">
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,8"
                        VerticalAlignment="Top">

                        <StackPanel Orientation="Horizontal">
                            <Label Width="110" Content="누적 가동 시간" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="Gray"
                                Text="{Binding MonitorVM.SelectedMonitor.TotalRuntime, StringFormat={}{0:hh\\:mm\\:ss}, FallbackValue=00:00:00}" />
                        </StackPanel>

                        <StackPanel>
                            <DockPanel LastChildFill="True">
                                <Label
                                    Width="110"
                                    Content="실시간 가동률 "
                                    DockPanel.Dock="Left" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="Gray"
                                    Text="{Binding MonitorVM.SelectedMonitor.OperatingRate, StringFormat={}{0:F1}%, FallbackValue=00.00%}" />
                            </DockPanel>

                            <StackPanel Margin="10,5">
                                <TextBlock FontSize="10" Foreground="Gray">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="* 기준: {0:hh\:mm} ~ {1:hh\:mm}">
                                            <Binding Path="WorkStartTime" Source="{x:Static properties:Settings.Default}" />
                                            <Binding Path="WorkEndTime" Source="{x:Static properties:Settings.Default}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <ProgressBar
                                    Width="220"
                                    Height="20"
                                    Margin="0,5"
                                    Background="#333"
                                    BorderThickness="1"
                                    Foreground="{Binding MonitorVM.SelectedMonitor.OperatingRate, Converter={StaticResource RateBrushConverter}}"
                                    Maximum="100"
                                    Value="{Binding MonitorVM.SelectedMonitor.OperatingRate}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--#endregion Operation-->
            </StackPanel>
            <!--#endregion Monitor Info-->

            <!--#endregion Panel Form-->

            <!--#region Panel Button-->
            <StackPanel
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="70" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EquipManageVM.SelectedEquip}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>

                <Button
                    x:Name="BtnPanelSave"
                    Background="{StaticResource StatusStableBrush}"
                    Content="가동"
                    Foreground="{StaticResource StatusStableTintBrush}" />
                <Button
                    x:Name="BtnPanelCancel"
                    Content="보고"
                    IsEnabled="True" />
                <Button
                    x:Name="BtnPanelDelete"
                    Background="{StaticResource StatusErrorBrush}"
                    Content="중단"
                    Foreground="{StaticResource StatusErrorTintBrush}" />
            </StackPanel>
            <!--#endregion Panel Button-->
        </StackPanel>
    </Border>
</UserControl>