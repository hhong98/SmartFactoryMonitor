<UserControl
    x:Class="SmartFactoryMonitor.Controls.DashboardCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartFactoryMonitor.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    MaxWidth="150"
    MaxHeight="100"
    mc:Ignorable="d">
    <Border
        Background="{Binding CardBackgroundColor, ElementName=Root, FallbackValue=White}"
        BorderBrush="Black"
        BorderThickness="0.3"
        CornerRadius="4">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="StatusTxt"
                Grid.Row="0"
                Margin="10,10,0,0"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="{Binding CardTextColor, ElementName=Root, FallbackValue=Black}"
                Text="{Binding CardName, ElementName=Root, FallbackValue='New Card'}" />

            <Grid
                Grid.Row="1"
                Margin="12,0,0,5"
                VerticalAlignment="Bottom">
                <TextBlock
                    HorizontalAlignment="Left"
                    FontSize="{Binding CardMessageSize, ElementName=Root, FallbackValue=30}"
                    FontWeight="Bold"
                    Foreground="{Binding CardTextColor, ElementName=Root, FallbackValue=Black}"
                    Text="{Binding CardMessage, ElementName=Root, FallbackValue='()'}" />
                <Image
                    Width="20"
                    Height="20"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Opacity="0.1"
                    Source="../Res/graph_progress_bars.png" />
            </Grid>
        </Grid>
    </Border>
</UserControl>